[diff]
        tool = nvimdiff

[difftool]
        prompt = false

[merge]
	tool = nvimdiff

[mergetool]
        prompt = false

[difftool "nvimdiff"]
        cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[mergetool "fugitive"]
	cmd = "nvim -f -c \"Gvdiffsplit!\" \"$MERGED\""

[mergetool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"
