{{- $choices := list "foot*:Tc" "screen-256color" -}}
{{- $tmux_terminal := promptChoiceOnce "Default terminal for tmux" $choices "foot*:Tc" -}}

{{- $user_name := promptStringOnce "Full name" "Rasmus Bertell" -}}
{{- $user_email := promptStringOnce "Email address" "rasmus@bertell.fi" -}}

secrets: "error"

git:
        autoAdd:    true
        autoCommit: true
        autoPush:   true

diff:
        command: "nvim"
        args:
                - "-d"
                - "{{ "{{" }} .Destination {{ "}}" }}"
                - "{{ "{{" }} .Target {{ "}}" }}"

merge:
        command: "nvim"
        args:
                - "-d"
                - "{{ "{{" }} .Destination {{ "}}" }}"
                - "{{ "{{" }} .Source {{ "}}" }}"
                - "{{ "{{" }} .Target {{ "}}" }}"

data:
        user:
                name: {{ $user_name | quote }}
                email: {{ $user_email | quote }}
                gpg_socket: "TODO: get it with `gpgconf --list-dirs socketdir | sed 's/.*\\///'`"
        tmux:
                terminal: {{ $tmux_terminal | quote }}
